<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/offButton"
        android:layout_width="265dp"
        android:layout_height="131dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="50dp"
        android:onClick="clickOffButton"
        android:text="OFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onButton" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="144dp"
        android:layout_height="58dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="148dp"
        android:onClick="clickStartButton"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offButton" />

    <Button
        android:id="@+id/onButton"
        android:layout_width="265dp"
        android:layout_height="131dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="1dp"
        android:onClick="clickOnButton"
        android:text="on"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/offButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="47dp"
        android:gravity="center"
        android:ems="10"
        android:textSize="30sp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offButton" />

</android.support.constraint.ConstraintLayout>